---
const { post } = Astro.props;
---

<article class="prose lg:prose-lg max-w-none">
    <a class="no-underline" href={post.uri} aria-label={post.title}>
        <h2>{post.title}</h2>    
    </a>
    { post.categories.nodes.map(category => {
        return (<a class='term-link mr-2 no-underline text-primary' href={category.uri}>{category.name}</a>)
    })}
    <span><time datetime={post.date}>{new Date(post.date).toLocaleDateString()}</time></span>
    <section>
        <div>
            <p set:html={post.excerpt}></p> 
        </div>
    </section>
</article>